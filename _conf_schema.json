{
  "group_configs": {
    "type": "list",
    "description": "群组配置列表",
    "hint": "点击 + 号添加群组配置",
    "default": [
      {
        "group_id": 0,
        "servers": []
      }
    ],
    "items": {
      "type": "object",
      "description": "单个群组配置",
      "items": {
        "group_id": {
          "type": "int",
          "description": "QQ群号",
          "hint": "请输入群号",
          "default": 0
        },
        "servers": {
          "type": "list",
          "description": "服务器列表",
          "hint": "该群的服务器列表",
          "default": [],
          "items": {
            "type": "object",
            "description": "服务器信息",
            "items": {
              "name": {
                "type": "string",
                "description": "服务器名称",
                "hint": "例如：主服务器",
                "default": ""
              },
              "address": {
                "type": "string",
                "description": "地址",
                "hint": "IP:Port",
                "default": ""
              }
            }
          }
        }
      }
    }
  }
}
